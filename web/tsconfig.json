{
  "compilerOptions": {
    "outDir": "./dist/",
    "sourceMap": true,
    "strict": true,
    "noImplicitReturns": true,
    "noImplicitAny": true,
    "module": "es6",
    "moduleResolution": "node",
    "target": "ESNext",
    "allowSyntheticDefaultImports": true,
    "incremental": true,
    "experimentalDecorators": true,
    "allowJs": true,
    "jsx": "react"
  },
  "include": ["./src/**/*"]
}
